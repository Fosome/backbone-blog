<h2>
  <%= post.get('title') %>
</h2>

<p>
  <i><%= post.get('author') %></i> | <%= new Date(post.get('created_at')).toLocaleString() %>
<p>

<p>
  <%= post.get('body') %>
</p>

<ul class="unstyled">
  <li><a href="#/posts/<%= post.get('id') %>/edit">Edit Post</a></li>
  <li><a href="#/posts/<%= post.get('id') %>" class="delete-link">Delete Post</a></li>
  <li><a href="#/posts">Back to Posts</a></li>
</ul>
